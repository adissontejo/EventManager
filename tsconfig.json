{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext.asynciterable"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
